    "contracts:deploy": "./contracts/scripts/deploy.sh",
    "contracts:verify": "./contracts/scripts/verify.sh",
    "format": "prettier --write .",
    "lint": "pnpm --filter frontend lint"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  }
}
